<?xml version="1.0" encoding="utf-8"?>

<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/rippleLayout"
    android:layout_width="match_parent"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/loginMain"
    app:mrl_rippleDuration="500"
    app:mrl_rippleHover="true"
    android:paddingHorizontal="20dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/contactDataImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/contactDataName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="Stephen Curry"
                android:textStyle="bold"
                android:fontFamily="@font/average_sans"
                />

            <TextView
                android:id="@+id/contactDataNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayMain"
                android:textSize="16sp"
                android:layout_marginLeft="3dp"
                android:maxLines="1"
                android:text="+917022458655"
                android:fontFamily="@font/average_sans"
                />


        </LinearLayout>

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>

