<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center"


    android:layout_marginHorizontal="15dp"
    app:cardBackgroundColor="@color/cardBackground"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingRight="20dp"
        android:paddingLeft="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="10dp"
        android:paddingVertical="20dp"
        android:orientation="vertical"

      >

        <TextView
            android:id="@+id/smooliderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:text="Deleted By You"
            android:autoSizeMinTextSize="14sp"

            android:autoSizeTextType="uniform"
            app:autoSizeTextType = "uniform"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"

            android:layout_marginStart="5dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/smooliderLottie"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"

            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/smooliderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:text="7"
                android:fontFamily="@font/gilroy_light"
                android:textSize="35sp"
                />
            <TextView
                android:id="@+id/smooliderNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/gilroy_light"
                android:textSize="16sp"
                android:text="Numbers"
                android:autoSizeTextType="uniform"
                android:layout_marginLeft="7dp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:layout_gravity="bottom"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/smooliderDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_light"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="5"
            android:text="Times you deleted your \nNumber from others"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>